<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.listview.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn"
        android:text="填充数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--id设置成android:id="@android:id/list"的时候，继承LiatActivity的类在setListAdapter的时候，才可以自动获取这个ListView-->
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000"/>

    <!--id设置成android:id="@android:id/empty"，当Adapter为空的时候，默认显示这个图片-->
    <ImageView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_null"
        android:text="No data" />

</LinearLayout>
